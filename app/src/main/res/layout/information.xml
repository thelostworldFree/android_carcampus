<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="头像"
            android:textSize="16sp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/image_head_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/user1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/name_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="名字"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后端的爱好者"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/wechat_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="身份证"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/number_wechat_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="510902********3167"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/my_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="我的二维码"
            android:textSize="16sp"
            android:textColor="#000" />
        <ImageView
            android:id="@+id/erweima"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/we6"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/mya_ddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="我的地址"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/mya_ddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="四川成都*****5单元2号"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="性别"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/sex_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="地区"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/area_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川  成都"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/layout_selector">

        <TextView
            android:id="@+id/qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="个性签名"
            android:textSize="16sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/qianming_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞一样的感觉"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>



</LinearLayout>







